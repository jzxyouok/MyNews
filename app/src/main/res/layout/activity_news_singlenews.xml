<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_35"
        android:background="#bf4c3b"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_content_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mar_5"
            android:layout_weight="1"
            android:src="@mipmap/back" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/mar_5"
            android:layout_marginTop="@dimen/mar_5"
            android:layout_weight="1"
            android:src="@mipmap/news_title_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5" />
    </LinearLayout>
    <ListView
        android:id="@+id/news_content_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"/>

</LinearLayout>
