<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="horizontal">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_hours_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/item_hours_title"
            style="@style/TextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_hours_digest"
            style="@style/TextViewDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_hours_title"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/item_hours_replycount"
            style="@style/TextViewDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/item_hours_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/item_hours_replycount"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:textColor="#ff0011"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_hours_pTime"
            style="@style/TextViewDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

</LinearLayout>
