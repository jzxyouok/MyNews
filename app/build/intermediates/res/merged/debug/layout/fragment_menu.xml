<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/menu_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/me_unlanding_portrait"
            android:visibility="visible"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/menu_login"
            android:layout_width="@dimen/menu_drawiv"
            android:layout_height="@dimen/menu_drawiv"/>

    </FrameLayout>
    <TextView
        android:id="@+id/menu_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/nemu_name"
        android:layout_marginTop="@dimen/gx"
        style="@style/TextViewTitle"
        android:textColor="#ffffff"/>
    <ImageView
        android:id="@+id/menu_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/menu_szd"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/menu_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/menu_setup"
        android:layout_marginTop="@dimen/gx"
        style="@style/TextViewTitle"
        android:textColor="#ffffff"/>
    <ImageView
        android:id="@+id/menu_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/menu_gx"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/menu_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/menu_update"
        android:layout_marginTop="@dimen/gx"
        style="@style/TextViewTitle"
        android:textColor="#ffffff"/>


</LinearLayout>
